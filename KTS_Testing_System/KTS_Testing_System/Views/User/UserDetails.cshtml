@model KTS_Entity.User
@using KTS_Testing_System.Classes
@*@{
        ViewData.TemplateInfo.HtmlFieldPrefix = "User";
    }*@


@Html.HiddenFor(model => model.user_Id)
<div class="row">
    <div class="row top-spacing">
        <div class="form-group">

            @Html.LabelFor(model => model.username, "User Name", htmlAttributes: new { @class = "control-label col-lg-2 col-md-2 col-sm-2 " })
            <div class="col-lg-4 col-md-4 col-sm-4">

                @Html.TextBoxFor(model => model.username, new { @class = "form-control mandatoryField", @autocomplete = "off", @maxlength = "32" })
                @Html.ValidationMessageFor(model => model.username, "", new { @class = "text-danger" })
            </div>

            @Html.LabelFor(model => model.password, "Password", htmlAttributes: new { @class = "control-label col-lg-2 col-md-2 col-sm-2" })
            <div class="col-lg-4 col-md-4 col-sm-4">
                @Html.PasswordFor(model => model.password, new { @class = "form-control mandatoryField", @autocomplete = "off", @maxlength = "64" })
                @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="row top-spacing">
        <div class="form-group">
            @Html.LabelFor(model => model.first_names, "First Name", htmlAttributes: new { @class = "control-label col-lg-2 col-md-2 col-sm-2 " })
            <div class="col-lg-4 col-md-4 col-sm-4">
                @Html.EditorFor(model => model.first_names, new { htmlAttributes = new { @class = "form-control", @maxlength = "128" } })
                @Html.ValidationMessageFor(model => model.first_names, "", new { @class = "text-danger" })
            </div>

            @Html.LabelFor(model => model.last_name, "Last Name", htmlAttributes: new { @class = "control-label col-lg-2 col-md-2 col-sm-2 " })
            <div class="col-lg-4 col-md-4 col-sm-4">
                @Html.EditorFor(model => model.last_name, new { htmlAttributes = new { @class = "form-control mandatoryField", @maxlength = "128" } })
                @Html.ValidationMessageFor(model => model.last_name, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
   
    <div class="row top-spacing" style="margin-bottom:15px;">
        <div class="form-group ">
            @Html.LabelFor(model => model.designation, "Designation", htmlAttributes: new { @class = "control-label col-lg-2 col-md-2 col-sm-2 " })
            <div class="col-lg-4 col-md-4 col-sm-4">
                @Html.EditorFor(model => model.designation, new { htmlAttributes = new { @class = "form-control", @maxlength = "64" } })
                @Html.ValidationMessageFor(model => model.designation, "", new { @class = "text-danger" })
            </div>
            @Html.LabelFor(model => model.status, "Status", htmlAttributes: new { @class = "control-label col-lg-2 col-md-2 col-sm-2 " })
            <div class="col-lg-4 col-md-4 col-sm-4">
                @Html.DropDownListFor(model => model.status, Lookup.GetUserStatus(), "-- Select Status --", new { @class = "ddlProjectvalue form-control mandatoryField" })
                @Html.ValidationMessageFor(model => model.status, "", new { @class = "text-danger" })
            </div>
        
          
        </div>

    </div>
</div>
@*}*@
