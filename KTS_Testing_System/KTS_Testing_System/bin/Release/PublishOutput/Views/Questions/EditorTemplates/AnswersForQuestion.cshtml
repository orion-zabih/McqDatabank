            @Html.TextBoxFor(model=>model.correct_p, new { @hidden = "hidden"})
            <div class="radio c-radio col-lg-5 col-md-5 col-sm-6" style="margin-top:0px; text-align: center">
                <label>
                    
                    @if (Model.correct_p == "true")
                    {                       
                        
                            <input onclick='RadSelectionChanged("@(guid)")' @*name="RadCorrectOption_@guid"*@ name="RadCorrectOption" id="RadCorrectOption_@guid" value="true" checked="checked" type="radio">
