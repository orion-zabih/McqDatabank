@model KTS_Testing_System.ViewModel.AnswersForQuestion
@using KTS_Testing_System.Classes
@{
    var prefix = ViewData.TemplateInfo.HtmlFieldPrefix;
    var prefixStart_GuidParent = prefix.IndexOf('[');
    var prefixEnd_GuidParent = prefix.IndexOf(']');
    string guid = prefix.Substring(prefixStart_GuidParent + 1, prefixEnd_GuidParent - prefixStart_GuidParent - 1);
    var LoggedUser = (User as CustomPrincipal);
}


<div class="row">

    @Html.HiddenFor(model => model.answer_id)
    <div class="form-group ">
        @Html.LabelFor(model => model.description, "Option", htmlAttributes: new { @class = "col-lg-1 col-md-1 col-sm-1 control-label" })
        <div class="col-lg-3 col-md-3 col-sm-3">
            @Html.TextBoxFor(model => model.description, new { @class = "form-control mandatoryField", @autocomplete = "off", @maxlength = "256" })
            @Html.ValidationMessageFor(model => model.description, "", new { @class = "text-danger" })
        </div>

